package com.ict.edu;

public class Ex02 {
	public static void main(String[] args) {
		//if ~ else : 조건식이 참일때와 거짓일때 각각 나눠서 처리한다.
		// 형식 : if (조건식){
		//			  조건식이 참일때 실행 문장;
		//			  조건식이 참일때 실행 문장;
		//			  }  else {
		//			  조건식이 거짓일때 실행 문장;
		//			  조건식이 거짓일때 실행 문장;
		//			 }
	
		
		// int k2 60 이상이면 합격, 60미만은 불합격
		int k1 = 60;
		String str = "초기값";
		if (k1>=60) {str = "합격";} else { str = "불합격";}		
		System.out.println("결과 : " + str);
		
		// 홀수 짝수 판별
		int k2 = 7;
		str = "초기값";
		if (k2%2==0) {str = "짝수";} else { str = "홀수";}		
		System.out.println("결과 : " + str);		
		
		// 대문자, 소문자 판별
		char k5 = 'G';
		
		
		
		
		// 1또는 3이면 남자. 아니면 여자
		
		// 근무시간 8590 ,초과시 1.5 근무시간 10 얼마?
		
		// 두 수 중 큰 값을 출력하시오
		
	}
}
